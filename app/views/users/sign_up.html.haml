%h1 Sign Up
.row
  .span6.offset3
    = form_for(@user) do |f|
      = f.label :user_name
      = f.text_field :user_name

      = f.label :email
      = f.text_field :email

      = f.label :password
      = f.password_field :password

      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation

      = f.submit "Create My Account", class: "btn btn-lg btn-primary"
